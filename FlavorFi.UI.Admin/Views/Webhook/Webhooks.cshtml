<div id="webhooks" data-bind="with: CurrentVM">
    <div class="col-md-12">
        <div class="panel panel-filled">
            <div class="panel-heading">
                Webhooks
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="webhook-activitylogs-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Event</th>
                                <th>Topic</th>
                                <th>Webhook Url</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody data-bind="dataTablesForEach: {
                                            data: ShopifyWebhooks,
                                            dataTableOptions: {
                                                @*dom: '<'row'<'col-sm-4'l><'col-sm-4 text-center'B><'col-sm-4'f>>tp,*@
                                                columns: [{width: '10%'}, {width: '10%'}, {width: '10%'}, {width: '70%'}, {width: '10%'}],
                                                order: [],
                                                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, 'All']] } }">
                            <tr>
                                <td data-bind="text: Id()"></td>
                                <td data-bind="text: Event()"></td>
                                <td data-bind="text: Topic()"></td>
                                <td data-bind="text: Url()"></td>
                                <td>
                                    <button class="btn btn-accent" data-bind="visible: IsActive(), click: $parent.DeleteShopifyWebhook"> Active </button>
                                    <button class="btn btn-warning" data-bind="visible: !IsActive(), click: $parent.ActivateShopifyWebhook">Inactive</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        MainVM.CurrentVM(new WebhooksViewModel());
        MainVM.CurrentVM().Load();
    </script>
}