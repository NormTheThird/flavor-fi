<div id="webhooks" data-bind="with: CurrentVM">
    <div class="col-md-12">
        <div class="panel panel-filled">
            <div class="panel-heading">
                Webhook Activity Logs
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="webhook-activitylogs-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Topic</th>
                                <th>Record Id</th>
                                <th>Activity</th>
                                <th>Date</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody data-bind="dataTablesForEach: {
                                data: ShopifyWebhookActivityLogs,
                                dataTableOptions: {
                                    @*dom: '<'row'<'col-sm-4'l><'col-sm-4 text-center'B><'col-sm-4'f>>tp,*@
                                    columns: [{width: '10%'}, {width: '10%'}, {width: '70%'}, {width: '5%'}, {width: '5%'}],
                                    order: [],
                                    lengthMenu: [[10, 25, 50, -1], [10, 25, 50, 'All']] } }">
                            <tr>
                                <td data-bind="html: Topic" />
                                <td data-bind="html: RecordId" />
                                <td data-bind="html: Activity" />
                                <td data-bind="html: DateCreated" />
                                <td data-bind="html: TimeCreated" />
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        MainVM.CurrentVM(new WebhookActivityLogsViewModel());
        MainVM.CurrentVM().Load();
    </script>
}