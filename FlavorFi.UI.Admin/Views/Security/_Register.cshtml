<div id="security-register" style="display: none">
    <div class="container-center lg animated slideInDown">
        <div class="view-header">
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-add-user"></i>
            </div>
            <div class="header-title">
                <h3>Create Account</h3>
                <small>
                    Please enter your data to register.
                </small>
            </div>
        </div>

        <div class="panel panel-filled">
            <div class="panel-body">
                <form novalidate>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>First Name</label>
                            <input id="firstname" name="firstname" type="text" class="form-control" data-bind="value: FirstName">
                            <span class="help-block small">Your first name</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Last Name</label>
                            <input id="lastname" name="lastname" type="text" class="form-control" data-bind="value: LastName">
                            <span class="help-block small">Your last name</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Email Address</label>
                            <input id="register-email" name="register-email" type="email" class="form-control" data-bind="value: Email">
                            <span class="help-block small">Your address email to contact</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Password</label>
                            <input id="register-password" name="register-password" type="password" class="form-control" data-bind="value: Password">
                            <span class="help-block small">Your hard to guess password</span>
                        </div>
                        <div class="form-group col-lg-6">
                            <div class="checkbox checkbox-primary">
                                <input type="checkbox" id="agreement-checkbox" data-bind="checked: Agrees">
                                <label for="agreement-checkbox">
                                    By registering you agree to our <a href="#">Terms.</a>
                                </label>
                            </div>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Registration Code</label>
                            <input id="registration-code" name="registration-code" type="text" class="form-control" data-bind="value: RegistrationCode">
                            <span class="help-block small">Company site regisration code</span>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-accent" data-bind="click: RegisterAccount">Register</button>
                        <button class="btn btn-default" data-bind="click: ShowLogin">Login</button>
                    </div>
                    <h4 class="text-danger text-center m-t-lg" data-bind="text: ErrorMessage"></h4>
                </form>
            </div>
        </div>

    </div>
</div>