<div id="security-reset-password" style="display:none">
    <div class="container-center animated slideInDown">
        <div class="view-header">
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-lock"></i>
            </div>
            <div class="header-title">
                <h3>New Password</h3>
                <small>
                    Please create your new password.
                </small>
            </div>
        </div>

        <div class="panel panel-filled">
            <div class="panel-body">
                <form novalidate>
                    <div class="form-group">
                        <label class="control-label" for="newpassword">New Password</label>
                        <input id="newpassword" name="newpassword" type="password" title="Please enter your new password" placeholder="******" required="" class="form-control" data-bind="value: Password">
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="confirmpassword">Confirm Password</label>
                        <input id="confirmpassword" name="confirmpassword" type="password" title="Please confirm your password" placeholder="******" required="" class="form-control" data-bind="value: ConfirmPassword">
                    </div>
                    <div>
                        <button class="btn btn-accent" data-bind="click: ResetPassword">Reset My Password</button>
                    </div>
                    <h4 class="text-danger text-center" data-bind="text: ErrorMessage"></h4>
                </form>
            </div>
        </div>

    </div>
</div>